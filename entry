from tkinter import *
pencere = Tk()
pencere.geometry("240x180")
pencere.title("Alanya Bahçeşehir Koleji")
def yaz():
    metin ["text"] = " Merhaba " + ad.get()
adEtiket = Label(text="Lütfen Adınızı Giriniz")
adEtiket.pack()
ad = Entry()
ad.pack()
buton = Button(text="Tıkla" , command = yaz)
buton.pack()
metin = Label()
metin.pack()
pencere.mainloop()
